        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.GameType)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.GameType)
        </dd>

        @{ if (Model.GameType == HammerSpace.Data.Games.GameType.BoardGame)
            {

                @*Board Game specific info*@
                <dt>
