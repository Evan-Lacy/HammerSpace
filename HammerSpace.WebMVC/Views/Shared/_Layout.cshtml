<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - HammerSpace</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <a href="@Url.Action("Index", "Home")" title="Home" class="navbar-brand">
                    <img src="~/Content/HammerSpace-Logo.png" class="logoIcon" />
                </a>
                <a href="@Url.Action("Index", "Home")" title="Home" class="navbar-brand">HammerSpace</a>
                <button type="button" class="navbar-toggle float-left" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @*@Html.ActionLink("HammerSpace", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })*@
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav justify-content-center">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("About", "About", "Home")</li>
                    @*Shows the Movies link in the Navbar only if logged in*@
                    @if (User.Identity.IsAuthenticated)
                    {
                        <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                        <li>@Html.ActionLink("Games", "Index", "Game")</li>
                        <li>@Html.ActionLink("Movies", "Index", "Movie")</li>
                    }
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
    </div>
    <section id="footer">
        <div class="container">
            <div class="row align-content-center">
                <div class="col">
                    <img src="~/Content/HammerSpace-Logo.png" style="height:50px; width:50px;">
                </div>
                <div class="col">
                    <p>&copy; @DateTime.Now.Year - HammerSpace</p>
                </div>
            </div>
        </div>
    </section>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
